<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".view.activity.FaceReActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/back_up"
            android:text="返回上一页"
            android:onClick="back_up"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
    <TextView
        android:id="@+id/show_voicedata"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#ff000000"
        android:gravity="center">

        <!--daojishi-->


        <com.canbot.retrofitdemo.view.custom.CameraPreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            />
        <com.canbot.retrofitdemo.view.custom.FaceView
            android:id="@+id/fcview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/countDown"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/iv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />


    </FrameLayout>

    <TextView
        android:id="@+id/show_actiondata"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        />


</LinearLayout>